{
    "manifest_version": 3,
    "name": "maggi.dev tiktok downloader",
    "version": "1.872",
    "description": "TikTok video downloader extension",
    "icons": {
        "128": "assets/safe.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://*.tiktok.com/*",
        "https://api.maggi.dev/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/safe.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.tiktok.com/*"
            ],
            "js": [
                "logger.js",
                "content.js"
            ]
        }
    ]
}

